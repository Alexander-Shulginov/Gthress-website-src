block vars
    - var section_name;
    - var section_title;
    - var section_text;

block content

section(class=`${section_name}`)
    .container 
        div(class=`${section_name}__content`)
            if (section_title)
                h1(class=`${section_name}__title`)= section_title
            if (section_text)
                p(class=`${section_name}__descr`)= section_text
            a(class=`${section_name}__link` href="#")
                | Получить консультацию
            div(class=`${section_name}__social-icons`)
                include ../components/social/_social
            div(class=`${section_name}__social-links`)
                include ../components/social-link/_social-link